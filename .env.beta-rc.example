# beta-RC production baseline
# Copy to .env on server and replace domain/secret values.

NODE_ENV=production
HOST=127.0.0.1
PORT=5000
TRUST_PROXY=loopback

# Public URL
BASE_URL=https://beta-rc.example.com

# MongoDB (local docker in host)
MONGO_URI=mongodb://127.0.0.1:27017/whatsapp_campaigns
SESSION_STORE=mongo

# Auth/session
SESSION_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
SESSION_COOKIE_SECURE=true
ALLOW_DEFAULT_ADMIN_CREDENTIALS=false
ALLOW_INSECURE_SESSION_SECRET=false
ALLOW_INSECURE_DEFAULTS=false
ALLOW_LEGACY_ADMIN_LOGIN=false

# Socket.IO behind nginx
SOCKET_ORIGIN=https://beta-rc.example.com
SOCKET_PATH=/socket.io

# WhatsApp LocalAuth persistence (outside repo)
WWEBJS_AUTH_DIR=/var/www/paredes_devs/whs-auth
WHATSAPP_AUTO_RESTORE=true
WHATSAPP_AUTO_RESTORE_BACKGROUND=true
WHATSAPP_POLL_ENABLED=false
WHATSAPP_POLL_INTERVAL_MS=15000

# Puppeteer/Chrome
PUPPETEER_DISABLE_SANDBOX=true
PUPPETEER_EXECUTABLE_PATH=
CHROME_PATH=
PUPPETEER_ARGS=--disable-background-networking,--disable-renderer-backgrounding
PUPPETEER_USER_AGENT=

# Logging
LOG_HTTP=true
LOG_HTTP_BODY=false
LOG_HTTP_HEADERS=false
LOG_HTTP_ALL=false
LOG_DIR=logs
LOG_LEVEL=info
LOG_FILE_MODE=sync
LOG_FORMAT=text
