# App runtime
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
TRUST_PROXY=loopback

# Public URL (used in docs/proxy settings)
BASE_URL=http://localhost:5000

# Database
# Required in production: use remote/local Mongo URI reachable from server
MONGO_URI=mongodb://localhost:27017/whatsapp_campaigns
# Legacy alias supported by code (optional)
# MONGODB_URI=mongodb://localhost:27017/whatsapp_campaigns

# Auth/session
SESSION_SECRET=change-this-super-secret
SESSION_STORE=memory
SESSION_COOKIE_SECURE=false

# Initial admin bootstrap
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ALLOW_DEFAULT_ADMIN_CREDENTIALS=false
ALLOW_INSECURE_SESSION_SECRET=false
ALLOW_INSECURE_DEFAULTS=false
ALLOW_LEGACY_ADMIN_LOGIN=false

# Socket.IO (reverse proxy / nginx)
# Comma-separated list, use * only if you really need any origin.
SOCKET_ORIGIN=http://localhost:5000
# Backward-compat alias also accepted in code
# CORS_ORIGIN=http://localhost:5000
SOCKET_PATH=/socket.io

# WhatsApp session persistence (set outside repo in production)
WWEBJS_AUTH_DIR=.wwebjs_auth

# Puppeteer / Chrome
# Optional: set explicit browser binary if auto-discovery fails
PUPPETEER_EXECUTABLE_PATH=
# Optional fallback alias
CHROME_PATH=
# Recommended true on many Linux servers without Chrome sandbox support
PUPPETEER_DISABLE_SANDBOX=true
# Optional extra Chromium flags, comma-separated
PUPPETEER_ARGS=--disable-background-networking,--disable-renderer-backgrounding
# Optional custom user-agent
PUPPETEER_USER_AGENT=

# WhatsApp behavior
WHATSAPP_AUTO_RESTORE=true
WHATSAPP_AUTO_RESTORE_BACKGROUND=true
WHATSAPP_POLL_ENABLED=false
WHATSAPP_POLL_INTERVAL_MS=15000

# Logging
LOG_HTTP=true
LOG_HTTP_BODY=false
LOG_HTTP_HEADERS=false
LOG_HTTP_ALL=false
LOG_DIR=logs
LOG_LEVEL=info
LOG_FILE_MODE=sync
LOG_FORMAT=text